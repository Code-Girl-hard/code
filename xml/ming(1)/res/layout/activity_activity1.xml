<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    
     android:background="@drawable/cz_bj" 
     android:layout_height="match_parent" 
     android:layout_width="match_parent" 
     xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

<Button 
    android:id="@+id/btn_regist"
     android:layout_height="wrap_content" 
     android:layout_width="match_parent"
      android:textColor="#ffffff" 
      android:text="注册新用户" 
      android:background="@drawable/s8"
      android:onClick="register"
       android:layout_marginRight="20dp" 
       android:layout_marginLeft="20dp" 
       android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
         />


<LinearLayout
     android:layout_height="wrap_content"
      android:layout_width="match_parent" 
      android:layout_marginRight="20dp" 
      android:layout_marginLeft="20dp"
       android:layout_marginBottom="20dp"
        android:orientation="vertical" 
        android:layout_above="@+id/btn_regist">


<RelativeLayout
    android:id="@+id/rl_user"
      android:layout_height="wrap_content"
      android:layout_width="match_parent" 
       >

<EditText
     android:id="@+id/edtTxt_number"
      android:inputType="number" 
      android:background="@drawable/s8"
      android:ems="10" 
      android:layout_toRightOf="@+id/tv_number"
       android:layout_centerVertical="true" style="@style/edtTxtStyle"/>

<TextView
     android:text="手机号码:" 
     android:id="@+id/tv_number"
      android:layout_centerVertical="true" 
     
      style="@style/tvStyle"/>

</RelativeLayout>


<RelativeLayout 
    
     android:layout_height="wrap_content"
      android:layout_width="match_parent" 
      android:id="@+id/rl_nickName" 
      android:layout_marginTop="5dp">

<EditText
     android:id="@+id/edtTxt_nickName"
      android:ems="10"
      android:background="@drawable/s8"
       android:layout_toRightOf="@+id/tv_number"
        android:layout_centerVertical="true" style="@style/edtTxtStyle"/>

<TextView
     android:textColor="#000000" 
     android:text="昵称 :" 
     android:id="@+id/tv_number" 
     style="@style/tvStyle"/>

</RelativeLayout>

</LinearLayout>

</RelativeLayout>